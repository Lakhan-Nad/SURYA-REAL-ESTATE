    <script type="text/javascript">
      document
        .getElementById("submitBtn")
        .addEventListener("click", formValidate);

      let email = document.getElementById("email");
      let name = document.getElementById("firstName");
      let phone = document.getElementById("phoneNumber");
      let message = document.getElementById("message");

      function formValidate(event) {
        console.log("kandjsbdn");
        let emailRegex = new RegExp(
          /^([a-zA-Z0-9_.-]+)@([a-zA-Z0-9_.-]+).([a-zA-Z]{2,5})$/
        );
        let phoneRegex = new RegExp(/^[0-9]{10}$/);

        if (name.value.length == 0) {
          name.classList.add("error");
          return false;
        }

        if (email.value.length == 0 || !email.value.match(emailRegex)) {
          email.classList.add("error");
          return false;
        }

        if (phone.value.length == 0 || !phone.value.match(phoneRegex)) {
          phone.classList.add("error");
          return false;
        }

        if (message.innerText.length == 0) {
          message.placeholder = "Write Something....";
          return false;
        }
        document.getElementById("message_form").submit();
      }
      email.addEventListener("focus", function () {
        if (this.classList.contains("error")) {
          this.classList.remove("error");
        }
      });
      phone.addEventListener("focus", function () {
        if (this.classList.contains("error")) {
          this.classList.remove("error");
        }
      });
      message.addEventListener("focus", function () {
        if (this.classList.contains("error")) {
          this.classList.remove("error");
        }
      });
      name.addEventListener("focus", function () {
